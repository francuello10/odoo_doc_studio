<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View for Workspaces -->
    <record id="view_doc_workspace_search" model="ir.ui.view">
        <field name="name">doc.workspace.search</field>
        <field name="model">doc.workspace</field>
        <field name="arch" type="xml">
            <search string="Workspace Search">
                <field name="name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Kanban View for Workspaces -->
    <record id="view_doc_workspace_kanban" model="ir.ui.view">
        <field name="name">doc.workspace.kanban</field>
        <field name="model">doc.workspace</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="color"/>
                <field name="page_count"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_color_#{record.color.raw_value}">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <field name="page_count"/> pages
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List View for Workspaces -->
    <record id="view_doc_workspace_tree" model="ir.ui.view">
        <field name="name">doc.workspace.tree</field>
        <field name="model">doc.workspace</field>
        <field name="arch" type="xml">
            <list string="Documentation Workspaces">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="color" widget="color_picker"/>
                <field name="page_count"/>
            </list>
        </field>
    </record>

    <!-- Form View for Workspaces -->
    <record id="view_doc_workspace_form" model="ir.ui.view">
        <field name="name">doc.workspace.form</field>
        <field name="model">doc.workspace</field>
        <field name="arch" type="xml">
            <form string="Documentation Workspace">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Workspace Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="page_count"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pages" name="pages">
                            <field name="page_ids" mode="list">
                                <list string="Pages">
                                    <field name="name"/>
                                    <field name="parent_id"/>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Workspaces -->
    <record id="action_doc_workspace" model="ir.actions.act_window">
        <field name="name">Workspaces</field>
        <field name="res_model">doc.workspace</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first documentation workspace
            </p>
            <p>Workspaces help you organize documentation by project, team, or topic.</p>
        </field>
    </record>
</odoo>
